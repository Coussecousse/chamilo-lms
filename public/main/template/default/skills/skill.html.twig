{% autoescape false %}
<h3>{{ 'Skills' | trans }}</h3>
<ul>
    <li>
        <a href="/main/skills/skill_profile.php">
            {{ 'Add profile' | trans }}
        </a>
    </li>
    <li>
        <a href="/main/skills/skill_level.php">
            {{ 'Add level' | trans }}
        </a>
    </li>
</ul>

{% if form is defined %}
    {{ form }}
{% endif %}

{% for skill in list %}
    <h4>
        {{ skill.title }}
        {% if skill.shortCode %}
            ({{ skill.shortCode }})
        {% endif %}
        <a
            href="skills/skill.php?action=edit&id={{ skill.id }}"
        >
            {{ 'ActionIcon::EDIT'|mdi_icon(22) }}
        </a>
    </h4>
    {{ skill.profile }}
{% endfor %}
{% endautoescape %}
