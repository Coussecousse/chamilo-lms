{% autoescape false %}
    {# Fallbacks: email-logo (SVG/PNG) â†’ header-logo (SVG/PNG) #}
    {% set src = theme_asset_base64('images/email-logo.svg') %}
    {% if not src %}{% set src = theme_asset_base64('images/email-logo.png') %}{% endif %}
    {% if not src %}{% set src = theme_asset_base64('images/header-logo.svg') %}{% endif %}
    {% if not src %}{% set src = theme_asset_base64('images/header-logo.png') %}{% endif %}
    <table border="0" cellpadding="10" cellspacing="0" width="100%">
        <tr>
            <td width="245" valign="top" {{ mail_header_style|default('') }}>
                {% if src %}
                    <img
                        alt="Chamilo"
                        width="130"
                        height="60"
                        src="{{ src }}"
                    />
                {% else %}
                    <span style="font-weight:600;font-size:16px;line-height:1;">Chamilo</span>
                {% endif %}
            </td>
            <td width="100%">&nbsp;</td>
        </tr>
    </table>
{% endautoescape %}
